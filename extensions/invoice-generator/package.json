{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "invoice-generator",
  "title": "Invoice Generator",
  "description": "Create invoices using the Invoice Generator API.",
  "icon": "command-icon.png",
  "author": "alexs",
  "license": "MIT",
  "commands": [
    {
      "name": "generate-invoice",
      "title": "Generate Invoice",
      "description": "Generate an invoice.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "name",
      "title": "Name",
      "description": "The name of the sender.",
      "type": "textfield",
      "required": true
    },
    {
      "name": "address",
      "title": "Address",
      "description": "The address of the sender. Use commas to separate new lines.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "logoUrl",
      "title": "Logo URL",
      "description": "The URL of the sender's logo.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "includeShipping",
      "label": "Include Shipping",
      "description": "Include shipping field in invoice form.",
      "type": "checkbox",
      "default": true,
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0",
    "axios": "^1.7.2",
    "fs": "^0.0.1-security",
    "moment": "^2.30.1",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
