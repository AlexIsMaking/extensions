{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "invoice-generator",
  "title": "Invoice Generator",
  "description": "Create invoices using the Invoice Generator API.",
  "icon": "command-icon.png",
  "author": "alexs",
  "license": "MIT",
  "commands": [
    {
      "name": "generate-invoice",
      "title": "Generate Invoice",
      "description": "Generate an invoice.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "name",
      "title": "Name",
      "description": "The name of the sender.",
      "type": "textfield",
      "required": true
    },
    {
      "name": "address",
      "title": "Address",
      "description": "The address of the sender. Use commas to separate new lines.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "logoUrl",
      "title": "Logo URL",
      "description": "The URL of the sender's logo.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "invoiceNumberPrefix",
      "title": "Invoice Number Prefix",
      "description": "The prefix for the invoice number.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "defaultCurrency",
      "title": "Default Currency",
      "description": "The default currency for your invoices.",
      "type": "dropdown",
      "required": false,
      "data": [
        {
          "title": "Australian Dollars",
          "value": "AUD"
        },
        {
          "title": "Brazilian Reais",
          "value": "BRL"
        },
        {
          "title": "Canadian Dollars",
          "value": "CAD"
        },
        {
          "title": "Chinese Yuan",
          "value": "CNY"
        },
        {
          "title": "Czech Koruna",
          "value": "CZK"
        },
        {
          "title": "Euros",
          "value": "EUR"
        },
        {
          "title": "Hong Kong Dollars",
          "value": "HKD"
        },
        {
          "title": "Hungarian Forint",
          "value": "HUF"
        },
        {
          "title": "Icelandic Krona",
          "value": "ISK"
        },
        {
          "title": "Indian Rupees",
          "value": "INR"
        },
        {
          "title": "Indonesian Rupiah",
          "value": "IDR"
        },
        {
          "title": "Japanese Yen",
          "value": "JPY"
        },
        {
          "title": "Malaysian Ringgit",
          "value": "MYR"
        },
        {
          "title": "Mexican Pesos",
          "value": "MXN"
        },
        {
          "title": "New Zealand Dollars",
          "value": "NZD"
        },
        {
          "title": "Norwegian Krone",
          "value": "NOK"
        },
        {
          "title": "Philippine Pesos",
          "value": "PHP"
        },
        {
          "title": "Pounds Sterling",
          "value": "GBP"
        },
        {
          "title": "Russian Rubles",
          "value": "RUB"
        },
        {
          "title": "Singapore Dollars",
          "value": "SGD"
        },
        {
          "title": "South African Rand",
          "value": "ZAR"
        },
        {
          "title": "South Korean Won",
          "value": "KRW"
        },
        {
          "title": "Swedish Krona",
          "value": "SEK"
        },
        {
          "title": "Swiss Francs",
          "value": "CHF"
        },
        {
          "title": "Turkish Lira",
          "value": "TRY"
        },
        {
          "title": "US Dollars",
          "value": "USD"
        }
      ]
    },
    {
      "name": "termsAndConditions",
      "title": "Terms and Conditions",
      "description": "Terms and conditions for your invoices.",
      "type": "textfield",
      "required": false
    },
    {
      "name": "defaultIncludeAddress",
      "label": "Default Include Address",
      "description": "Include address in the invoice form by default.",
      "type": "checkbox",
      "default": false,
      "required": false
    },
    {
      "name": "defaultIncludeTax",
      "label": "Default Include Tax",
      "description": "Include tax in the invoice form by default.",
      "type": "checkbox",
      "default": false,
      "required": false
    },
    {
      "name": "includeAmountPaid",
      "label": "Include Amount Paid",
      "description": "Include amount paid field in invoice form.",
      "type": "checkbox",
      "default": true,
      "required": false
    },
    {
      "name": "includePaymentTerms",
      "label": "Include Payment Terms",
      "description": "Include payment terms field in invoice form.",
      "type": "checkbox",
      "default": true,
      "required": false
    },
    {
      "name": "includeShipping",
      "label": "Include Shipping",
      "description": "Include shipping field in invoice form.",
      "type": "checkbox",
      "default": true,
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0",
    "axios": "^1.7.2",
    "fs": "^0.0.1-security",
    "moment": "^2.30.1",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
